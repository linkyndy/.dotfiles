# Navigate easier through parent directories
alias -g ...='../..'
alias -g ....='../../../'
alias -g .....='../../../..'

# System
alias grep='grep --color=auto --exclude-dir=.git'
alias ls='ls -G'
alias l='ls -lAh'

# Git
alias gs='git status'
alias gss='git status --short'
alias gpl='git pull'
alias gplr='git pull --rebase'
alias gps='git push'
alias ga='git add'
alias gap='git add --patch'
alias gc='git commit'
alias gco='git checkout'
alias gcob='git checkout -b'
alias gst='git stash'
alias gstp='git stash pop'
alias gstl='git stash list'
alias gd='git diff'
alias glps='git pretty -n 10'
alias glpg='git pretty --graph'

# Ruby
alias b='bundle'
alias be='bundle exec'

# Handy commands
alias reload='. ~/.zshrc'
alias brup='brew update && brew upgrade && brew cleanup && brew prune && brew doctor'
alias newest-dir='ls -ld *(/om[1])'
alias modified-today='print *(e:age today now:)'
alias top-commands='print -l -- ${(o)history%% *} | uniq -c | sort -nr | head -n 10'

# Borrowing Base aliases
. ~/.dotfiles/projects/borrowing_base/aliases
